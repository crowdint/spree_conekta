<div id="payment-order">
  <div id="po-wrapper">
    <div id="po-header">
         <span class="left" id="pagalo-co-logo">
         <img id="logo" src="https://s3.amazonaws.com/conekta/v5/img/conekta-brand.png" style="max-width:250px;max-height:100px;">
         </span>
      <h1 class="right"><%= t('conekta.bank.payment_title') %></h1>

      <div class="clear"></div>
    </div>
    <div id="po-body">
      <div id="po-body-wrapper" style="padding: 30px 20px">
        <div class="left">
          <h2 class="highlight">INFORMACIÃ“N DE PAGO</h2>
          <table>
            <tr>
              <td> <%= t('conekta.bank.service_number') %> </td>
              <td class="highlight">
                <%= @order_details['bank']['service_number'] %>
              </td>
            </tr>
            <tr>
              <td> <%= t('conekta.bank.reference') %></td>
              <td class="highlight">
                <%= @order_details['bank']['reference'] %>
              </td>
            </tr>
          </table>
        </div>
        <div class="right">
          <div class="wrapper">
            <h3 class="highlight">SIGUIENTE PASO</h3>

            <p class="enhance">  <%= raw(t('conekta.bank.payment_message')) %></p>
          </div>
        </div>
        <div class="clear"></div>
      </div>
    </div>
  </div>
  <div id="print">
    <a class="right buttons" id='pbutton' onclick='printDoc("#po-body")'>IMPRIMIR FICHA DE PAGO</a>

    <div class="clear"></div>
  </div>
</div>
